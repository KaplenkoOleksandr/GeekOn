@using Microsoft.AspNetCore.Identity
@using Geekon.Data;
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/mainPage.css">
</head>
<body>
    <div class="back_right">
        <div class="text_back">
            <div class="text_block" style=" margin-left: -320px;">
                <h1 style="color: rgb(176 251 117);">Plans </h1>
                <h1 style="color: white; margin-left: 13px;"> are useless,</h1>
            </div>
            <div class="text_block" style=" margin-left: 50px;">
                <h1 style="color: white;"> but</h1>
                <h1 style="color: rgb(176 251 117); margin-left: 13px;"> planning</h1>
                <h1 style="color: white; margin-left: 13px;"> is indispensable.</h1>
            </div>
            <h3 style="color: white; margin-left: 330px; margin-top: 10px; font-size: 25px;">Dwight D. Eisenhower</h3>
        </div>
    </div>

    @if (!SignInManager.IsSignedIn(User))
    {
        <a class="back_left" asp-area="Identity" asp-page="/Account/Login">
            <div class="button_back">
                <div class="my_button">
                    <h3 style="color: rgb(176 251 117); font-size: 25px;">Start with us!</h3>
                    <i class='bx bxs-chevrons-down bx-fade-down arrow'></i>
                </div>
            </div>
        </a>
    }
    <section>
        <div class="layer layer1"></div>
        <div class="layer layer2"></div>
        <div class="layer layer3"></div>
        <div class="layer layer4"></div>
        <div class="layer layer5"></div>
        <div class="layer layer6"></div>
        <div class="layer layer7"></div>
        <div class="layer layer8"></div>
        <div class="layer layer9"></div>

    </section>

    <script>
    </script>

</body>
</html>