@model Geekon.Models.Projects

@{
    ViewData["Title"] = "Create";
}

<div class="modal" id="addProject" style="">
    <div style="background-color:#101d13; display:flex; position:absolute; top:50%; left:50%; transform:translate(-50%, -50%); flex-direction:column; justify-content:space-around; align-items:center; height:600px; width:700px; border-radius:15px;">
        <h4>Create Project</h4>
        <form action="/Projects/Create">
            <div class="form-group">
                <label asp-for="ProjName"></label>
                <input asp-for="ProjName" class="form-control" />
                <span asp-validation-for="ProjName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjImagePath"></label>
                <input asp-for="ProjImagePath" class="form-control" />
                <span asp-validation-for="ProjImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <!-- Slider main container -->
        <div class="swiper" style="padding:60px 0 60px 0;">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                @foreach (var slides in ViewData["projBack"] as List<string>)
                {
                    <div class="swiper-slide" style="background-image:url('../projBack/@slides'); background-size:cover;"></div>
                }
            </div>
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>
        </div>
    </div>
</div>

<script>
    var swiper = new Swiper('.swiper', {
        // Optional parameters
        loop: true,
        spaceBetween: 60,
        slidesPerView: 3,
        centeredSlides: true,
        slideToClickedSlide: true,

        // If we need pagination
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        }
    });
</script>